<h2>CONTACT US TODAY:</h2>
<div class="d-inline-flex align-items-center">
  <p>If you are contacting us about financial assistance, please use our financial assistance form at the link provided: </p>
  <div class="pl-1">
    <%= link_to "FORM", assistance_index_path, class: "btn btn-success"%>
  </div>
</div>
<div class="contact-form">

  <%= form_for @contact, url: contact_index_path, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, required: true, class: "form-control mb-3" %>
        <%= f.label :email %>
        <%= f.text_field :email, required: true, class: "form-control mb-3" %>
        <%= f.label :message %>
        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: " form-control mb-3", placeholder: "Send me a message"%>
        <%= f.submit 'Send Message', class: 'btn btn-success'%>
      </div>
  <% end %>

  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>

</div>
