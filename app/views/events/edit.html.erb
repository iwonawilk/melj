<div class="container">
  <%= simple_form_for(@event) do |f| %>
    <div class="form-group">
      <%= f.input :title, class: "form-control" %>
      <%= f.input :description, class: "form-control" %>
      <%= f.input :image, class: "form-control" %>
      <%= f.submit "Edit Event", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
